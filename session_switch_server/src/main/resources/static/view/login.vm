<link href="$link.contextPath/assets/css/page/auth/login.css" rel="stylesheet">

<br/><br/><br/><br/><br/>

<form id="signin-form" class="form-signin" role="form" method="POST" action="$link.contextPath/web/auth/login/authc">
	<h2 class="form-signin-heading">
       	$!{title}&nbsp;
	</h2>
	<!-- 
	<div class="logo">
		<img src="$link.contextPath/assets/img/logo.png" alt="Logo" >
	</div> 
	-->
	<div class="has-feedback">
		<input class="form-control" type="text" id="username" name="username" minlength="5" maxlength="30" required autofocus placeholder="登陆账户" tabindex="1"/>
	</div>
	<div class="has-feedback">
		<input class="form-control" type="password" id="password" name="password" minlength="5" maxlength="30" required placeholder="登录密码" tabindex="2"/>
	</div>
	<!-- 	
	<div class="captcha-row has-feedback row">
		<div class="col-sm-7">
        	<input class="form-control element" type="text" name="captcha" maxlength="5" required placeholder="验证码"/>
        </div>
        <div class="col-sm-5">
        	<img id="captcha-img" class="img-responsive" src="$link.contextPath/web/auth/captcha" style="cursor:pointer;"/>
        </div>
	</div> 
 	-->	
 	<div class="row">
		<div class="col-sm-12">
			<div class="checkbox">
				<label style="margin-top:8px;">
					<input type="checkbox" id="autologin" name="rememberMe" value="true" tabindex="3" style="margin-top:7px;"/>             
					<span class="atlg f-fs1" style="cursor:pointer;">自动登录</span>             
				</label>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12" >
			<button class="btn btn-lg btn-primary btn-block submit" type="button" tabindex="4">登 录</button>
		</div>
	</div>
	<div class="row">
        <!-- 
        <div class="col-xs-4" >
        	<a href="#" class="forgetPassword">忘记密码?</a>
        </div> 
        -->
	</div>
	<div class="general-error alert alert-warning hide"></div>
</form>
<script src="$link.contextPath/assets/js/page/auth/login.js" type="text/javascript"></script>
